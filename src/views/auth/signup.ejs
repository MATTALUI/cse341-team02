<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../common/header.ejs') %>
    <title>Bookshop | Sign Up</title>
    <script src="/signup.js" charset="utf-8" defer></script>
  </head>
  <body class="pt-5">
    <%- include('../common/nav.ejs') %>
    <%- include('../common/toaster.ejs') %>
    <%- include('../common/flash.ejs') %>
    <div class="container mb-3">
      <div class="row pt-3x">
        <div class="d-flex justify-content-between align-items-center pt-3 pb-3">
          <h1>Sign up</h1>
        </div>
        <form class="container mb-3" action="/auth/signup" method="POST">
          <div class="row">
            <input type="hidden" name="_csrf" value="<%= csrfToken  %>">
            <div class="col-sm-12 mb-3">
              <div class="control-group">
                <label for="email">*Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>
            </div>
            <div class="col-sm-12 mb-3">
              <div class="control-group">
                <label for="password">*Password</label>
                <input type="password" id="password" name="password" class="form-control" required>
                <p class="form-text">Passwords must be at least 8 characters long.</p>
              </div>
            </div>
            <div class="col-sm-12 mb-3">
              <div class="control-group">
                <label for="confirmPassword">*Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
              </div>
            </div>
            <hr/>
            <div class="col-sm-12 mb-3">
              <div class="control-group">
                <label for="firstName">*First Name</label>
                <input type="firstName" id="firstName" name="firstName" class="form-control" required>
              </div>
            </div>
            <div class="col-sm-12 mb-3">
              <div class="control-group">
                <label for="lastName">*Last Name</label>
                <input type="lastName" id="lastName" name="lastName" class="form-control" required>
              </div>
            </div>
          </div>
          <input type="submit" class="btn btn-primary" value="Sign Up">
        </form>
      </div>
    </div>
  </body>
</html>
